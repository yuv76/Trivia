<Window x:Class="Client.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="450" Width="800"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="150,150,150,62">
            <Image></Image>
            <TextBlock x:Name="Welcome" FontSize="30" Width="470"/>
            <TextBlock x:Name="enterPass" FontSize="30" Margin="10" Width="470">Enter password:</TextBlock>
            <TextBox Width="476" Height="33"/>
            <Button Margin="10" x:Name="ENTER_USERNAME" Click="enterPassword_click" Height="35" Width="100">Enter</Button>
        </StackPanel>

    </Grid>
</Window>
