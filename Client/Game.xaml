<Window x:Class="Client.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800"
        Background="AliceBlue"
        Icon="Resources/Images/quiz.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/back.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Margin="0,43,0,0">
            <StackPanel Orientation="Horizontal" Height="47" Width="703">
                <TextBlock x:Name="ANSWERED" FontSize="17" Width="108" FontFamily="Cascadia Mono SemiBold"></TextBlock>
                <TextBlock x:Name="TIME" FontSize="18" Margin="430,0,0,0" FontFamily="Cascadia Mono SemiBold" RenderTransformOrigin="0.5,0.5" Width="100"></TextBlock>
            </StackPanel>
            <TextBlock x:Name="QUESTION" Height="64" FontSize="30" TextAlignment="Center" FontFamily="Cascadia Mono SemiBold" TextWrapping="WrapWithOverflow"></TextBlock>
            <StackPanel Orientation="Horizontal" Height="221" Width="494" >
                <StackPanel Height="186">
                    <Button x:Name="ANS1" Height="81" Width="243" Margin="0,0,0,18" Click="sendAns_click" FontFamily="Cascadia Mono SemiBold" BorderBrush="#FF17E3BF" BorderThickness="3,3,3,3">
                        <Button.Background>
                            <SolidColorBrush Color="#FF7AF5CD" Opacity="0.5"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="ANS2" Height="81" Width="243" Click="sendAns_click" FontFamily="Cascadia Mono SemiBold" BorderBrush="#FF17E3BF" BorderThickness="3,3,3,3">
                        <Button.Background>
                            <SolidColorBrush Color="#FF7AF5CD" Opacity="0.5"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0,0,18,0" Width="255" Height="186">
                    <Button x:Name="ANS3" Height="81" Width="243" Margin="0,0,0,18" Click="sendAns_click" FontFamily="Cascadia Mono SemiBold" BorderBrush="#FF17E3BF" BorderThickness="3,3,3,3">
                        <Button.Background>
                            <SolidColorBrush Color="#FF7AF5CD" Opacity="0.5"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="ANS4" Height="81" Width="243" Margin="0,0,0,0" Click="sendAns_click" FontFamily="Cascadia Mono SemiBold" BorderBrush="#FF17E3BF" BorderThickness="3,3,3,3">
                        <Button.Background>
                            <SolidColorBrush Color="#FF7AF5CD" Opacity="0.5"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="757">
                <Button Height="40" Width="130" Margin="0,0,0,0" Click="LeaveGame_click" FontFamily="Cascadia Mono SemiBold">
                    <Button.Background>
                        <ImageBrush ImageSource="/yellow.png"/>
                    </Button.Background> Leave Game
                </Button>
                <TextBlock x:Name="USERNAME" FontSize="16" Margin="540,0,0,0" FontFamily="Cascadia Mono SemiBold"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
