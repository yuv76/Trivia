<Window x:Class="Client.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800"
        Background="AliceBlue">
    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button x:Name="EXIT" Click="exit_clickAsync" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,250,250,0" Width="45">Exit</Button>
        <Button x:Name="CREATE_ROOM" Click="moveToCreateRoom_click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,150,116,0" Width="90" RenderTransformOrigin="0.445,1.399">Create Room</Button>
        <Button x:Name="JOIN_ROOM" Click="moveToJoinRoom_click" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="98,150,0,0" Width="70">Join Room</Button>
        <Button x:Name="STATISTICS" Click="moveToStatsMenu_click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,250,136,0">Statistics</Button>
    </Grid>
</Window>
