<Window x:Class="Client.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="JoinRoom" Height="450" Width="800"
        Background="AliceBlue">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="17" Margin="57,40,65,-60">Choose a Room To Join:</TextBlock>
                <Button Margin="360,40,65,-60" Click="refresh_Click" Height="28" Width="57" Content="refresh"/>
            </StackPanel>
            <ListBox x:Name="LST_ROOMS" Height="250"  Margin="57,90,65,20" FontSize="25"/>
            <Button x:Name="JOIN_ROOM" Height="44" Width="388" Content="Join" FontSize="20" Click="Join_Click"/>
        </StackPanel>


    </Grid>
</Window>
